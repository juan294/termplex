{
  "name": "termplex",
  "version": "0.1.0",
  "description": "Launch configurable multi-pane terminal workspaces with one command",
  "type": "module",
  "packageManager": "pnpm@10.29.2",
  "bin": {
    "termplex": "./dist/index.js",
    "ws": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "terminal",
    "multiplexer",
    "workspace",
    "tmux",
    "developer-tools",
    "cli"
  ],
  "author": "juan294",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@vitest/coverage-v8": "^3.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  }
}
